<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/validation_errors', resource: @test %>

  <div class="form-group col-4">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group col-1">
    <%= form.label :level %>
    <%= form.number_field :level, class: 'form-control' %>
  </div>

  <div class="form-group col-4">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: 'form-control' %>
  </div>

  <div class="form-group col-2">
    <%= form.label :timer %>
    <%= form.number_field :timer, class: 'form-control' %>
  </div>

  <div class="form-group"><%= form.submit class: 'btn btn-primary' %></div>
<% end %>
