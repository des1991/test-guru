<h1>Passing the <%= @test_passage.test.title %> test</h1>

<strong><%= @test_passage.current_question.body %></strong>

<p><strong>Question <%= @test_passage.question_number %> of the <%= @test_passage.test.questions.count %></strong></p>

<%= form_with url: test_passage_path(@test_passage), 
              local: true,
              method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, 
                                  @test_passage.current_question.answers, 
                                  :id,
                                  :body,
                                  include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit 'Next' %></p>
<% end %>
